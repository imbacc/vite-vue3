{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "baseUrl": ".",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "es6", "dom"],
    "alwaysStrict": true,
    "declaration": true,
    "removeComments": true,
    "diagnostics": true,
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "skipLibCheck": false,
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["./types"],
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["./types/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "tests", ".history"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
