{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "baseUrl": ".",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "es6", "dom"],
    "alwaysStrict": true,
    "declaration": true,
    "removeComments": true,
    "diagnostics": true,
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "skipLibCheck": false,
    "outDir": "dist",
    "types": ["@types/lodash-es", "@vue-macros/reactivity-transform/macros-global"],
    "typeRoots": ["types", "node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./types/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "types/**/*.d.ts", "vite-plugin/**/*.ts"],
  "exclude": ["node_modules", "tests", ".history"]
  // "references": [{ "path": "./tsconfig.node.json" }]
}
